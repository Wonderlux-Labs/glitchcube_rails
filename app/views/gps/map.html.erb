<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>üî• Glitch Cube GPS Tracker - Burning Man 2025</title>
    
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    
    <!-- Application CSS -->
    <style>
      <%= File.read(Rails.root.join('app/assets/stylesheets/gps_map.css')) %>
    </style>
</head>
<body>
    <!-- Main layout container -->
    <div class="app-container">
        <!-- Map container - 2/3 width -->
        <div class="map-section">
            <div id="map"></div>
        </div>
        
        <!-- Information panel - 1/3 width -->
        <div class="info-panel">
            <div class="panel-header">
                <h2 class="panel-title">üî• GLITCH CUBE</h2>
                <div class="panel-subtitle">BURNING MAN 2025</div>
            </div>
            
            <div class="panel-content">
                <!-- Location Status -->
                <div class="info-section">
                    <h3 class="section-title">LOCATION STATUS</h3>
                    <div class="status-grid">
                        <div class="status-item">
                            <span class="status-label">ZONE:</span>
                            <span class="status-value" id="panelZone">-</span>
                        </div>
                        <div class="status-item">
                            <span class="status-label">ADDRESS:</span>
                            <span class="status-value" id="panelAddress">-</span>
                        </div>
                        <div class="status-item">
                            <span class="status-label">COORDINATES:</span>
                            <span class="status-value" id="panelCoords">-</span>
                        </div>
                        <div class="status-item">
                            <span class="status-label">DISTANCE TO MAN:</span>
                            <span class="status-value" id="panelManDistance">-</span>
                        </div>
                    </div>
                </div>
                
                <!-- Nearby Landmarks -->
                <div class="info-section">
                    <h3 class="section-title">NEARBY LANDMARKS</h3>
                    <div class="landmarks-list" id="panelLandmarks">
                        <div class="no-data">Scanning...</div>
                    </div>
                </div>
                
                <!-- Nearest Facilities -->
                <div class="info-section">
                    <h3 class="section-title">FACILITIES</h3>
                    <div class="facilities-list" id="panelFacilities">
                        <div class="facility-item">
                            <span class="facility-type">NEAREST PORTO:</span>
                            <span class="facility-info" id="panelNearestPorto">-</span>
                        </div>
                    </div>
                </div>
                
                <!-- Connection Status -->
                <div class="info-section">
                    <h3 class="section-title">SYSTEM STATUS</h3>
                    <div class="system-status">
                        <div class="status-indicator">
                            <span class="indicator-dot" id="connectionDot"></span>
                            <span class="indicator-text" id="connectionStatus">Initializing</span>
                        </div>
                        <div class="sim-indicator" id="simModeIndicator"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Compact toolbar overlay for map -->
    <div class="map-toolbar">
        <div class="quick-status">
            <div class="location-display" id="addressBar">Loading...</div>
            <div class="section-display" id="sectionBar"></div>
            <div id="coordinates">Connecting...</div>
        </div>
    </div>
    
    <!-- Map controls -->
    <div class="controls-toolbar">
        <button class="control-button" id="center-button" title="Center on Cube">üìç</button>
        <button class="control-button" id="landmarks-toggle" title="Toggle Landmarks">üèõÔ∏è</button>
        <button class="control-button" id="streets-toggle" title="Toggle Streets">üõ£Ô∏è</button>
        <button class="control-button" id="compass-button" title="Center on Man">üß≠</button>
    </div>
    
    <!-- Static mode banner -->
    <div class="static-banner">
        üì° Live GPS Tracking - Glitch Cube Location
    </div>
    
    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <!-- Application Scripts -->
    <%= render 'partials/gps_map_script' %>
</body>
</html>