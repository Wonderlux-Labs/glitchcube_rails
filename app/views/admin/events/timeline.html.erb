<% content_for :layout, 'admin' %>

<h1>üìÖ Events Timeline</h1>

<div style="margin-bottom: 20px;">
  <%= link_to '‚Üê Back to Events', admin_events_path, class: 'btn' %>
  <%= link_to '7 Days', timeline_admin_events_path(days: 7), class: 'btn' %>
  <%= link_to '30 Days', timeline_admin_events_path(days: 30), class: 'btn' %>
  <%= link_to '90 Days', timeline_admin_events_path(days: 90), class: 'btn' %>
</div>

<% if @events_by_date.any? %>
  <% @events_by_date.each do |date, events| %>
    <div style="margin-bottom: 30px;">
      <h2 style="color: #00ffff; border-bottom: 1px solid #444; padding-bottom: 10px;">
        <%= date&.strftime('%A, %B %d, %Y') || 'No Date Set' %>
        <span style="font-size: 0.8em; color: #666;">(<%= events.count %> events)</span>
      </h2>
      
      <div style="margin-left: 20px;">
        <% events.sort_by(&:event_time).each do |event| %>
          <div style="background: #2a2a2a; padding: 15px; border: 1px solid #444; margin-bottom: 10px; border-left: 4px solid <%= event.high_importance? ? '#ff0000' : event.importance >= 4 ? '#ffff00' : '#00ff00' %>;">
            <div style="display: flex; justify-content: space-between; align-items: start;">
              <div style="flex: 1;">
                <h3 style="margin: 0 0 5px 0; color: #00ff00;">
                  <%= event.title %>
                  <span style="color: <%= event.high_importance? ? '#ff0000' : event.importance >= 4 ? '#ffff00' : '#666' %>;">
                    (<%= event.importance %>/10)
                  </span>
                </h3>
                <p style="margin: 0 0 10px 0; color: #ccc;">
                  <%= event.event_time&.strftime('%I:%M %p') || 'Time not set' %>
                  <% if event.location.present? %>
                    ‚Ä¢ <%= event.location %>
                  <% end %>
                </p>
                <p style="margin: 0; color: #aaa;">
                  <%= truncate(event.description, length: 200) %>
                </p>
                <% if event.upcoming? %>
                  <p style="margin: 5px 0 0 0; color: #00ffff; font-size: 0.9em;">
                    ‚è∞ <%= event.hours_until_event %> hours remaining
                  </p>
                <% end %>
              </div>
              <div style="margin-left: 20px;">
                <%= link_to 'View', admin_event_path(event), class: 'btn' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <div style="background: #2a2a2a; padding: 20px; border: 1px solid #444; text-align: center;">
    <p style="color: #666;">No events found for the selected time period.</p>
    <%= link_to 'View All Events', admin_events_path, class: 'btn' %>
  </div>
<% end %>

<% if @events.any? %>
  <div style="margin-top: 30px; text-align: center; color: #666;">
    <p>Showing <%= @events.count %> events</p>
  </div>
<% end %>